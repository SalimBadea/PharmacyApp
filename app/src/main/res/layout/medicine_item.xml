<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMedic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:gravity="start"
            android:text="Name : "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/med_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/tvMedic_name"
            android:inputType="text"
            android:text="Panadol"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvMedic_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/med_name"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:gravity="start"
            android:text="Description : "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/med_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMedic_name"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/tvMedic_desc"
            android:inputType="text"
            android:text="Panadol"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvMedic_ExDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMedic_desc"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:gravity="start"
            android:inputType="date"
            android:text="Expired Date : "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/med_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMedic_desc"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/tvMedic_ExDate"
            android:inputType="date"
            android:text="Panadol"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvMedic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMedic_ExDate"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:gravity="start"
            android:inputType="date"
            android:text="Every Time : "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/med_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMedic_ExDate"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/tvMedic_time"
            android:inputType="date"
            android:text="Panadol"
            android:textSize="18sp"
            android:textColor="@color/black"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
