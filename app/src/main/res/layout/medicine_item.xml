<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvMedic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:gravity="start"
            android:text="name : "
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/med_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/tvMedic_name"
            android:inputType="text"
            android:text="Panadol"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/tvMedic_ExDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMedic_name"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:gravity="start"
            android:inputType="date"
            android:text="Expired Date : "
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/med_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMedic_name"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/tvMedic_ExDate"
            android:inputType="date"
            android:text="Panadol"
            android:textSize="20sp"
            android:textStyle="bold"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
